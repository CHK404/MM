<Page x:Class="Material_Management.Views.Material"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Material_Management.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="Material">

    <Grid Background="#FFECECEC" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="자재 목록"
               FontSize="24"
               FontWeight="Bold"
               Margin="10"
               Grid.Row="0"/>
        <DataGrid x:Name="ToolDataGrid"
              AutoGenerateColumns="true"
              IsReadOnly="True"
              Margin="10"
              Grid.Row="1">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="수정" Click="EditTool_Click"/>
                    <MenuItem Header="삭제" Click="DeleteTool_Click"/>
                    <MenuItem Header="복원" Click="RestoreTool_Click"/>
                    <MenuItem Header="대여 요청" Click="RequestRental_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button Content="추가"
            Width="120"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="10"
            Click="AddMaterialButton_Click"
            Grid.Row="1"/>
    </Grid>
</Page>
